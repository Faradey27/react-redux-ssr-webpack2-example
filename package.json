{
  "name": "react-redux-ssr-webpack2-example",
  "description": "Example of an isomorphic (universal) webapp using react redux, ssr and hot reloading",
  "author": "Faradey27 <andrii.tiertyshnyi@gmail.com> (http://github.com/faradey27)",
  "license": "MIT",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/faradey27/react-redux-ssr-webpack2-example"
  },
  "homepage": "https://github.com/faradey27/react-redux-ssr-webpack2-example",
  "keywords": [
    "react",
    "isomorphic",
    "universal",
    "webpack2",
    "ssr",
    "server side",
    "hot reloading",
    "redux",
    "starter",
    "boilerplate"
  ],
  "main": "bin/server.js",
  "scripts": {
    "start": "concurrently --kill-others \"better-npm-run watch-client\" \"better-npm-run start-dev\"",
    "start-prod": "npm run build && concurrently --kill-others \"better-npm-run start-prod\"",
    "test": "jest",
    "test:e2e": "npm run build && webdriver-manager update && concurrently -k -s \"better-npm-run start-prod\" \"protractor\"",
    "analysis": "cross-env ANALYSIS=1 npm run build",
    "build": "better-npm-run build",
    "postinstall": "concurrently \"npm run build\" \"npm run build\" \"webpack --colors --display-error-details --config webpack/vendor.config.js\"",
    "hard-rebuild": "rm -rf static/dist yarn.lock node_modules && yarn install && yarn build && yarn start",
    "lint": "eslint -c .eslintrc src",
    "lighthouse-report": "LIGHTHOUSE_CHROMIUM_PATH=$(which google-chrome) lighthouse http://localhost:8080",
    "createLocaleFiles": "./lang/extract_lang.sh",
    "convertPOtoJson": "./lang/po2json.sh"
  },
  "betterScripts": {
    "start-prod": {
      "command": "node ./bin/server.js",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "production",
        "PORT": 8080,
        "HTTPS_PORT": 8081
      }
    },
    "start-dev": {
      "command": "node ./bin/server.js",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "development",
        "PORT": 3000,
        "HTTPS_PORT": 3009,
        "WEBPACK_DLLS": 1
      }
    },
    "watch-client": {
      "command": "node webpack/webpack-dev-server.js",
      "env": {
        "UV_THREADPOOL_SIZE": 100,
        "NODE_PATH": "./src",
        "NODE_ENV": "development",
        "PORT": 3000,
        "WEBPACK_DLLS": 1
      }
    },
    "build": {
      "command": "webpack --colors --display-error-details --display-optimization-bailout --config=webpack/prod.config.js",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "dependencies": {
