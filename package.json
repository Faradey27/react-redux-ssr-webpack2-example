    "babel-preset-react": "^6.23.0",
    "babel-preset-react-optimize": "^1.0.1",
    "babel-preset-stage-0": "^6.22.0",
    "babel-register": "^6.23.0",
    "babel-runtime": "^6.23.0",
    "body-parser": "^1.16.1",
    "compression": "^1.6.2",
    "cookie-parser": "^1.4.3",
    "cross-env": "^5.0.1",
    "express": "^4.14.1",
    "fs": "^0.0.1-security",
    "http-proxy": "^1.16.2",
    "jed": "^1.1.1",
